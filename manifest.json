{
  "manifest_version": 3,
  "name": "Readlang More Examples",
  "version": "1.1",
  "description": "Show more example sentences for flashcards",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.mistral.ai/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [{
    "matches": ["https://readlang.com/flashcards*"],
    "js": ["content.js"],
    "css": ["style.css"]
  }]
}
